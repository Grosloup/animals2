{% extends "AdminBundle:Layouts:master.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="span12">
                {{ breadcrumb.render("admin_products_show")|raw }}
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <h3 class="text-center">Produit "{{ entity.name }}"</h3>
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Catégorie</th>
                        <th>Nom</th>
                        <th>Référence</th>
                        <th>Conditionnement</th>
                        <th>Poids (kg/unité)</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{% if entity.type %}{{ entity.type.name }}{% else %} - {% endif %}</td>
                        <td>{{ entity.name }}</td>
                        <td>{% if entity.reference %}{{ entity.reference }}{% else %} - {% endif %}</td>
                        <td>{% if entity.packaging %}{{ entity.packaging }}{% else %} - {% endif %}</td>
                        <td>{% if entity.weight %}{{ entity.weight }}{% else %} - {% endif %}</td>
                        <td>{% if entity.description %}{{ entity.description }}{% else %} - {% endif %}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="span6 offset3">

                <a href="{{ path("admin_products_edit", {"id":entity.id}) }}" class="btn btn-primary">Editer <i class="icon-chevron-right  icon-white"></i></a>
            </div>
        </div>

    </div>
{% endblock %}
