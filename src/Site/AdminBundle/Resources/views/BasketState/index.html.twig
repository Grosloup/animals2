{% extends "AdminBundle:Layouts:master.html.twig" %}
{% block body %}

    <div class="container">
        <div class="row">
            <div class="span12">
                {{ breadcrumb.render("admin_basket_states_index")|raw }}
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <h3>Gestion des états de commande</h3>
                <p><a href="{{ path("admin_basket_states_new") }}">Enregistrer un nouvel état de commande <i class="icon-chevron-right"></i></a></p>

                {% if entities|length > 0 %}
                    <table class="table table-striped table-hover">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for entity in entities %}
                            <tr>
                                <td>{{ entity.id }}</td>
                                <td>{{ entity.name }}</td>
                                <td><a href="{{ path("admin_basket_states_show", {"id":entity.id}) }}">Voir</a> | <a href="{{ path("admin_basket_states_edit", {"id":entity.id}) }}">Editer</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                {% else %}
                    <p class="well">Pas d'états de commande enregistrés.</p>
                {% endif %}
            </div>
        </div>
    </div>

{% endblock %}
