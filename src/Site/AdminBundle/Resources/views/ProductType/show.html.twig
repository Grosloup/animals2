{% extends "AdminBundle:Layouts:master.html.twig" %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="span12">
                {{ breadcrumb.render("admin_product_types_show")|raw }}
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <h3 class="text-center">Type de produit "{{ entity.name }}"</h3>
            </div>
        </div>
        <div class="row">
            <div class="span12">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>ID</th>
                        <th>Nom</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div class="row">
            <div class="span6 offset3">

                <a href="{{ path("admin_product_types_edit", {"id":entity.id}) }}" class="btn btn-primary">Editer <i class="icon-chevron-right  icon-white"></i></a>
            </div>
        </div>

    </div>
{% endblock %}
