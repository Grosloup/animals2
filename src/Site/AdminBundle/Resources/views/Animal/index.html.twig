{% extends "AdminBundle:Layouts:master.html.twig" %}
{% block body %}

<div class="container">
    <div class="row">
        <div class="span12">
            <h3>Gestion des animaux</h3>
            <p><a href="{{ path("admin_animal_new") }}">Enregistrer un nouvel animal <i class="icon-chevron-right"></i></a></p>

            {% if entities|length > 0 %}
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                </tr>
                </thead>
                <tbody>
                {% for entity in entities %}
                    <tr>
                        <td>{{ entity.id }}</td>
                        <td>{{ entity.name }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {% else %}
                <p class="well">Pas d'animaux enregistr√©s.</p>
            {% endif %}
        </div>
    </div>
</div>

{% endblock %}
