{% extends "AdminBundle:Layouts:master.html.twig" %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="span12">
            <h3 class="text-center">Utilisateur "{{ entity.username }}"</h3>
        </div>
    </div>
    <div class="row">
        <div class="span12">
            <table class="table table-striped table-hover">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Pseudo</th>
                    <th>Nom réel</th>
                    <th>Prénom réel</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Actif</th>
                    <th>Bloqué</th>
                    <th>Role</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>{{ entity.id }}</td>
                    <td>{{ entity.username }}</td>
                    <td>{{ entity.reelLastname }}</td>
                    <td>{{ entity.reelFirstname }}</td>
                    <td>{{ entity.lastname }}</td>
                    <td>{{ entity.firstname }}</td>
                    <td>{% if entity.isActive %}oui{% else %}non{% endif %}</td>
                    <td>{% if entity.accountLocked %}oui{% else %}non{% endif %}</td>
                    {% if entity.isAdmin %}
                        <td>Administrateur</td>
                    {% elseif entity.isUser %}
                        <td>Utilisateur</td>
                    {% elseif entity.isVisitor %}
                        <td>Visiteur</td>
                    {% endif %}
                </tr>
                </tbody>
            </table>
        </div>
    </div>
    <div class="row">
        <div class="span6 offset3">

            <a href="{{ path("admin_users_edit", {"id":entity.id}) }}" class="btn btn-primary">Editer <i class="icon-chevron-right  icon-white"></i></a>
        </div>
    </div>

</div>
{% endblock %}
