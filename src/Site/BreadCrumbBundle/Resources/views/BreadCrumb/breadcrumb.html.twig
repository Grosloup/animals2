{% spaceless %}
{% if pages|length > 1 %}
    <ul class="breadcrumb">
        {% for page in pages %}
                {% if not loop.last %}
                    <li><a href="{{ path(page.route) }}">{{ page.title }}</a> <span class="divider">&gt;</span></li>
                {% else %}
                    <li class="active">{{ page.title }}</li>
                {% endif %}
        {% endfor %}
    </ul>
{% elseif  pages|length == 1%}
    <ul class="breadcrumb">
        <li class="active">{{ page.title }}</li>
    </ul>
{% endif %}
{% endspaceless %}
